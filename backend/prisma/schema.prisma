// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  username String @unique
  password String
  todoObjects Todo[]
  tags Tag[]
}

model Todo {
  id String @id @default(uuid())
  title String
  todos Item[]
  user User @relation(fields: [userId], references: [id])
  userId String
  updatedAt DateTime @updatedAt
  archived DateTime?
  tags Tag[]
  @@unique([id, userId])
}

model Item {
  id String @id @default(uuid())
  content String
  todoObject Todo @relation(fields: [todoObjectId], references: [id])
  todoObjectId String
  done Boolean @default(false)
}

model Tag {
  id String @id @default(uuid())
  name String
  todoObject Todo? @relation(fields: [todoObjectId], references: [id])
  todoObjectId String?
  user User @relation(fields: [userId], references: [id])
  userId String
  @@unique([name, userId])
}